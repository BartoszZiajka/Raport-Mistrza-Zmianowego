<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox fx:id="mainPane" maxHeight="690.0" maxWidth="1280.0" prefHeight="690.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.raport_mistrza_zmianowego.controllers.HomePageController">
    <MenuBar maxHeight="25.0" maxWidth="1.7976931348623157E308" prefHeight="25.0">
        <Menu text="Raporty">
            <MenuItem fx:id="addReportMenuItem" onAction="#menuItemClick" text="Dodaj raport"/>
            <MenuItem fx:id="editReportMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Edytuj raport"/>
            <MenuItem fx:id="reportViewingMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Podgląd raportów"/>
            <MenuItem fx:id="addSpecialReportMenuItem" onAction="#menuItemClick" text="Dodaj raport specjalny"
                      visible="false"/>
            <MenuItem fx:id="editSpecialReportMenuItem" onAction="#menuItemClick" text="Edytuj raport specjalny"
                      visible="false"/>
        </Menu>
        <Menu fx:id="adminMenu" text="Zarządzaj" visible="false">
            <MenuItem fx:id="employeesMenuItem" mnemonicParsing="false" onAction="#menuItemClick" text="Pracownicy"/>
            <MenuItem fx:id="usersMenuItem" mnemonicParsing="false" onAction="#menuItemClick" text="Użytkownicy"/>
            <MenuItem fx:id="editImportantInformationMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Edytuj ważne informacje"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Informacje">
            <MenuItem fx:id="importantInformationMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Najważniejsze informacje"/>
            <MenuItem fx:id="tauronContactNumbersMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Numery kontaktowe Tauron"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Pomoc">
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#menuItemClick" text="O programie"/>
            <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#menuItemClick" text="Wyloguj"/>
            <MenuItem fx:id="closeProgramMenuItem" mnemonicParsing="false" onAction="#menuItemClick"
                      text="Zamknij program"/>
        </Menu>
    </MenuBar>
    <Pane fx:id="contentContainerPane" layoutY="25.0" maxHeight="900.0" maxWidth="1600.0" minHeight="900.0"
          minWidth="1600.0" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
        <BorderPane.margin>
            <Insets left="-100.0" top="-200.0"/>
        </BorderPane.margin>
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <children>
            <Text layoutX="1200.0" layoutY="857.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Stworzone przez: Bartosz Ziajka">
                <font>
                    <Font size="26.0"/>
                </font>
            </Text>
        </children>
    </Pane>
</VBox>
